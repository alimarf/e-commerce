generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(cuid())
    createdAt DateTime? @default(now())
    email     String    @unique
    name      String?
    password  String
    admin     Boolean   @default(false)
}

model Product {
    id           String    @id @default(cuid())
    createdAt    DateTime? @default(now())
    kode_product String? 
    name         String
    description  String?
    price        Int
    rating       Int
    image        String
    qty          Int
}
